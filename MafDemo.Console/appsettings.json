{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Settings.Configuration",
      "Serilog.Formatting.Compact"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/Serilog/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": null,
          "retainedFileTimeLimit": "14.00:00:00",
          "fileSizeLimitBytes": 5242880,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "flushToDiskInterval": "00:00:01",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Llm": {
    "DefaultProvider": "Mistral",
    "Providers": {
      "OpenAI": {
        "ApiKey": "",
        "BaseUrl": "https://api.openai.com/v1",
        "Model": "gpt-4.1-mini"
      },
      "Mistral": {
        "ApiKey": "7hCJCgc4XwNF6OvomP2BymeKSeOAYlV7",
        "BaseUrl": "https://api.mistral.ai",
        "Model": "mistral-small-latest"
      },
      "Ollama": {
        "BaseUrl": "http://your-vm-or-localhost:11434",
        "Model": "llama3.1"
      },
      "Gemini": {
        "ApiKey": "",
        "BaseUrl": "https://generativelanguage.googleapis.com/v1",
        "Model": "gemini-1.5-pro"
      }
    }
  },
  "Prompts": {
    "DefaultSystemPromptPath": "Prompts/default_system_prompt.md",
    "ExpertsPromptDirectory": "Prompts/Experts"
  }
}
